<?xml version="1.0" encoding="UTF-8"?>
<project name="Project Grizzly"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <!-- Grizzly logo banner on all pages -->
    <bannerLeft>
        <!-- Reflow Maven Skin, but with "Reflow" highlighted -->
        <name><![CDATA[
          <img src="images/grizzlyHead.png"/>&nbsp;<span class="color-black">Project</span> Grizzly
          ]]>
        </name>
        <href>index.html</href>
    </bannerLeft>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.0.0</version>
    </skin>

    <custom>
        <reflowSkin>
            <!-- =============== Global skin configuration ================= -->

            <!-- Make this to 'false' for local development, i.e. file:// URLs -->
            <protocolRelativeURLs>true</protocolRelativeURLs>

            <!-- Brand on the top menu bar -->
            <brand>
                <name>
                    <![CDATA[Project <span class="color-brown">Grizzly</span>]]>
                </name>
                <href>index.html</href>
            </brand>

            <!-- Slogan appears under the Grizzly Head logo -->
            <slogan>NIO Event Development Simplified</slogan>

            <!-- Syntax highlighting Configuration -->
            <highlightJs>true</highlightJs>
            <highlightJsTheme>solarized_dark</highlightJsTheme>

            <!-- Skin theme -->
            <theme>bootswatch-cosmo</theme>

            <!-- Top navbar configuration -->
            <topNav>Documentation</topNav>

            <!-- Bottom nav configuration -->
            <bottomNav maxSpan="9">
                <column>Main|Download</column>
                <column>Contribute</column>
                <column>Project Info</column>
                <column>Documentation</column>
            </bottomNav>

            <!-- Table of Contents - displayed on all pages unless explicitly
                 disabled on a per-page basis. -->
            <toc>top</toc>
            <tocTopMax>4</tocTopMax>

            <!-- Misc Configuration -->
            <smoothScroll>true</smoothScroll>
            <absoluteResourceURL>https://grizzly.java.net</absoluteResourceURL>
            <skinAttribution>false</skinAttribution>

            <!-- Per-Page Configuration (allows overriding of global) -->
            <pages>
                <!-- index.html -->
                <index project="site">
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>true</toc>
                    <titleTemplate>Project Grizzly</titleTemplate>
                    <bottomDescription>
                        <![CDATA[
                        <p>
                        YourKit is kindly supporting open source projects with its full-featured Java Profiler.
                        <a href="http://www.yourkit.com/java/profiler/index.jsp">YourKit Java Profiler</a>
                        </p>
                        <hr/>
                        <p>
                        <a href="http://www.jetbrains.com/idea/" style="position: relative;display:block; width:120px; height:30px; border:0; margin:0;padding:0;text-decoration:none;text-indent:0;"><span style="margin: 0;padding: 0;position: absolute;top: -1px;left: 29px;font-size: 9px;cursor:pointer;  background-image:none;border:0;color: #acc4f9; font-family: trebuchet ms,arial,sans-serif;font-weight: normal;text-align:left;">Proud fan of</span><img src="http://www.jetbrains.com/idea/opensource/img/all/banners/idea120x30_blue.gif" alt="The best Java IDE" border="0"/></a>
                        </p>
                        ]]>
                    </bottomDescription>
                </index>

                <!-- contribute.html -->
                <contribute>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                </contribute>

                <!-- mailing.html -->
                <mailing>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                </mailing>

                <!-- documentation.html -->
                <documentation>
                    <toc>false</toc>
                </documentation>
            </pages>
        </reflowSkin>
    </custom>

