<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:j2ee="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="2.4" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee    http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    
    <description>WordsApplication</description>
    <display-name>Words</display-name>
    <servlet>
        <description>Words Servlet</description>
        <servlet-name>WordsServlet</servlet-name>
        <servlet-class>com.sun.grizzly.comet.CometServlet</servlet-class>
        <init-param>
            <description>
                The URL pattern used to register and enable Grizzly Comet long
                polling support.
            </description>
            <param-name>cometUrlPattern</param-name>
            <param-value>/words</param-value>
        </init-param>    
        <init-param>    
            <description>
                expirationDelay is the long delay before a request is
                resumed. Default is 600000.
            </description>
            <param-name>expirationDelay</param-name>
            <param-value>600000</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WordsServlet</servlet-name>
        <url-pattern>/words</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WordsServlet</servlet-name>
        <url-pattern>/moderator</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>25</session-timeout>
    </session-config>
</web-app>

